<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestorDeTarea"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="31"
        tools:ignore="UnusedAttribute">

        <!-- Declaración de MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración de NuevaTareaActivity con ajuste del teclado -->
        <activity
            android:name=".Tareas.NuevaTareaActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <!-- Declaración de NuevoTableroActivity con ajuste del teclado -->
        <activity
            android:name=".Tablero.NuevoTableroActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!-- Declaración de EditarTableroActivity -->
        <activity
            android:name=".Tablero.EditarTableroActivity"
            android:exported="false" />

        <!-- Declaración de ListaTareasActivity -->
        <activity
            android:name=".Tareas.ListaTareasActivity"
            android:exported="false" />

        <activity
            android:name=".Tablero.TableroList"
            android:exported="false" />

        <activity android:name=".Buscador.BuscardorWeb"/>
        <activity android:name=".Videos.ListaVideos" />
        <activity android:name=".Videos.ReproductorVideo"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
