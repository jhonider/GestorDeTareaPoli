<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tareas.NuevaTareaActivity"
    tools:ignore="ExtraText">

    <!-- Header -->
    <com.example.gestordetarea.Utils.CustomHeader
        android:id="@+id/customHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="384dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:background="#60E97D50"
        android:padding="8dp"
        android:text="Tableros"
        android:textColor="#343F4B"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customHeader"/>

    <EditText
        android:id="@+id/etNombreTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre Tarea"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <!-- Campo de Descripci贸n de la Tarea -->
    <EditText
        android:id="@+id/etDescripcionTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripci贸n"
        app:layout_constraintTop_toBottomOf="@id/etNombreTarea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <!-- Campo para Fecha de Inicio -->
    <TextView
        android:id="@+id/tvFechaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Fecha de Inicio"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionTarea"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar Fecha de Inicio"
        app:layout_constraintTop_toBottomOf="@id/tvFechaInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <!-- Campo para Fecha Fin -->
    <TextView
        android:id="@+id/tvFechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Fecha de Fin"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etFechaInicio"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etFechaFin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Seleccionar Fecha de Fin"
        app:layout_constraintTop_toBottomOf="@id/tvFechaFin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        tools:ignore="HardcodedText" />

    <!-- Botones Crear y Cancelar -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- Bot贸n Cancelar -->
        <Button
            android:id="@+id/btnCancelarTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />

        <!-- Espacio entre botones -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Bot贸n Crear -->
        <Button
            android:id="@+id/btnCrearTarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
