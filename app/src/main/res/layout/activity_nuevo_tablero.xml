<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoTableroActivity">

    <!-- Título "Task Master" centrado -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Master"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/grandhotel_regular"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        tools:ignore="HardcodedText" />

    <!-- Barra superior con menú hamburguesa y texto "Nuevo Tablero" -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menú hamburguesa -->
        <ImageButton
            android:id="@+id/menu_hamburguesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menú"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            tools:ignore="HardcodedText,UseAppTint" />

        <!-- Texto "Nuevo Tablero" -->
        <TextView
            android:id="@+id/tvNuevoTablero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Tablero"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-medium"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Campo de texto para el nombre del tablero -->
    <EditText
        android:id="@+id/etNombreTablero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre Tablero"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <!-- Campo de texto para la descripción del tablero -->
    <EditText
        android:id="@+id/etDescripcionTablero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        app:layout_constraintTop_toBottomOf="@id/etNombreTablero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <!-- Sección de Estilo con el ícono de paleta alineado a la derecha -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionTablero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="ExtraText">

        <!-- Texto "Estilo" -->
        <TextView
            android:id="@+id/tvEstilo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Estilo"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="HardcodedText" />

        <!-- Color seleccionado -->
        <View
            android:id="@+id/viewColorSeleccionado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <!-- Botón para seleccionar el color del tablero (Ícono de paleta) -->
        <ImageButton
            android:id="@+id/btnSeleccionarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_palette"
            tools:ignore="ContentDescription" /> <!-- Verifica que este recurso exista en drawable -->
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@android:color/darker_gray"
        android:contentDescription="Seleccionar color"
        tools:ignore="ContentDescription,UseAppTint" />

    </LinearLayout>

    <!-- Botones para "Cancelar" y "Crear" con mayor separación -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp">

        <!-- Botón para cancelar la creación del tablero -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:layout_marginEnd="178dp"
            tools:ignore="ButtonStyle,HardcodedText" />

        <!-- Botón para crear el tablero -->
        <Button
            android:id="@+id/btnCrearTablero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
